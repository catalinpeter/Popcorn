<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/entry_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/find_the_movie_placeholder"
        android:inputType="text"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <ImageView
        android:id="@+id/search_btn_main"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/entry_text"
        app:layout_constraintEnd_toEndOf="@+id/entry_text"
        app:layout_constraintTop_toTopOf="@+id/entry_text"
        app:srcCompat="@drawable/ic_search" />

    <ImageView
        android:id="@+id/logoimage_main"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/entry_text"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_app_logo_large" />

    <TextView
        android:id="@+id/trandingmovies_label_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="@string/trending_movies_label"
        android:textColor="#494A4B"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="@+id/entry_text"
        app:layout_constraintTop_toBottomOf="@+id/entry_text" />

    <TextView
        android:id="@+id/view_all_btn_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="@string/view_all_btn"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entry_text" />


</androidx.constraintlayout.widget.ConstraintLayout>