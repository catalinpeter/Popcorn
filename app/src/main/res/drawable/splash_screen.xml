<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view1_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/view4_splash"
            app:layout_constraintEnd_toStartOf="@+id/view2_splash"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondaryDark"
            app:layout_constraintBottom_toTopOf="@+id/view5_splash"
            app:layout_constraintEnd_toStartOf="@+id/view3_splash"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view1_splash"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/view6_splash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view2_splash"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view5_splash"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1_splash" />

        <View
            android:id="@+id/view5_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view6_splash"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view4_splash"
            app:layout_constraintTop_toBottomOf="@+id/view2_splash" />

        <View
            android:id="@+id/view6_splash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorSecondaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view5_splash"
            app:layout_constraintTop_toBottomOf="@+id/view3_splash" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view5_splash"
            app:layout_constraintStart_toEndOf="@+id/view4_splash"
            app:layout_constraintTop_toBottomOf="@+id/view2_splash"
            app:srcCompat="@drawable/ic_app_logo_medium" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</selector>